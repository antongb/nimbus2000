<!DOCTYPE html>
<html>
<head>
  <title>Soundclone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <h1>Welcome to SoundClone!</h1>
  <% if flash[:errors] %>
    <%= flash[:errors].join("<br>").html_safe %>
    <br><br>
  <% end %>
  <% if signed_in? %>
    <h2>Hello, <%= current_user.username %>!</h2>
    <a href="/tracks/new">Upload track</a>
    <form id="log-out" action="/session" method="post">
      <%= auth_token_input %>
      <%= method_input(:delete) %>
      <input type="submit" value="Log Out">
    </form>
  <% else %>
    <a href="/session/new">Sign in</a> or <a href="/users/new">Sign up</a>!
  <% end %>

<%= yield %>

</body>
</html>
