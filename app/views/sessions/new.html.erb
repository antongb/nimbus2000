<form id="new-session" class="sign-in-form group" action="/session" method="post">
  <h2>Please Sign In:</h2>
  <%= auth_token_input %>
  <label>
    <strong>Username:</strong>
    <input type="text" name="user[username]" id="username" autofocus="autofocus">
  </label>
  <br>
  <label>
    <strong>Password:</strong>
    <input type="password" name="user[password]" value="">
  </label>
  <br>
  <div class="sign-in-buttons"><button id="sign-in">Sign In!</button><button id="guest-sign-in">Sign In as Guest</button><br><div style="float: right">Or <a href="/users/new">sign up!</a></div></div>
  
</form>


<script type="text/javascript">
  $("#guest-sign-in").on("click", function(event) {
    event.preventDefault();
    $("#username").val("Guest");
    $("#new-session").submit();
  })
</script>
